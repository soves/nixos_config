[colors]
background = #1c1717
background-alt = #020202
foreground = #e8704b
primary = #e8704b
secondary = #459d6c
alert = #459d6c
disabled = #be423e

[bar/example]
width = 50%
offset-x = 25%
offset-y = 16
height = 32pt
radius = 16
# bottom = true

dpi = 96

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 5pt

border-size = 0
border-color = #e95378

padding-left = 1
padding-right = 1

module-margin = 1

separator = <
separator-foreground = ${colors.disabled}

font-0 = Fira Code Nerd Font;2

; tray-detached = true
; tray-position = right
; tray-offset-x = -16

modules-left = cava xworkspaces
modules-center = date
modules-right = pipewire-simple filesystem memory tray

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

; wm-restack = generic
; wm-restack = bspwm
; wm-restack = i3

; override-redirect = true
[module/cava]
type = custom/script
tail = true
exec = $HOME/.config/leftwm/themes/current/polybar-scripts/cava.sh
format = <label>
format-font = 5
label = %output%

[module/tray]
type = internal/tray
format = <tray>

[module/xworkspaces]
type = internal/xworkspaces


label-active = %name%
label-active-background =
label-active-underline= ${colors.background-alt}
label-active-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.disabled}
label-empty-padding = 1

[module/pipewire-simple]
type = custom/script
exec = ~/.config/leftwm/themes/current/polybar-scripts/pipewire-simple.sh
interval = 0.1
click-right = exec pavucontrol &
click-left = ~/.config/leftwm/themes/current/polybar-scripts/pipewire-simple.sh --mute &
scroll-up = ~/.config/leftwm/themes/current/polybar-scripts/pipewire-simple.sh --up &
scroll-down = ~/.config/leftwm/themes/current/polybar-scripts/pipewire-simple.sh --down &

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#E95678}%mountpoint%%{F-} %percentage_used%%

label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.disabled}

[module/memory]
type = internal/memory
interval = 2
format-prefix = "ram "
format-prefix-foreground = ${colors.primary}
label = %percentage_used:2%%

[module/date]
type = internal/date
interval = 1

date = %H:%M
date-alt = %Y-%m-%d %H:%M:%S

label = %date%
label-foreground = ${colors.primary}

[settings]
screenchange-reload = true
pseudo-transparency = true

; vim:ft=dosini

